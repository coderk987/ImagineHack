<%- include('partials/head.ejs') %>
    <script src="https://kit.fontawesome.com/56fcb4db86.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="dashboard.css">

    <body>
        <main style="display: flex;">
            <div class="side">
                <h1 style="color: #122049; text-align:left; padding: 1em;">MeduVeda</h1>
                <ul>
                    <a href="">
                        <li class="secondary">Dashboard</li>
                    </a>
                    <a href="#details">
                        <li>Patient Details</li>
                    </a>
                    <a href="#upcoming">
                        <li>Appointments</li>
                    </a>
                    <a href="#reports">
                        <li>Reports</li>
                    </a>
                    <a href="">
                        <li>Chat</li>
                    </a>
                    <hr style="background-color: #00000026; color: #00000026">
                    <a href="/logout">
                        <li class="secondary">Logout</li>
                    </a>
                </ul>
            </div>
            <div id="dashboard">
                <h1 style="margin: 2vw; text-align: left; font-weight: 500; font-size: 2.5em;">Dashboard</h1>
                <div style="display: flex; justify-content: space-evenly">
                    <div class="left" style="margin: 20px; flex: 1;">
                        <div style="display: flex; justify-content: space-between;">
                            <div class="reports rounded">
                                <img src="/img/addbutton.svg" alt="">
                                <p>View Reports</p>
                            </div>
                            <div class="appointments rounded">
                                <img src="/img/addbutton.svg" alt="">
                                <p>Request an appointment</p>
                            </div>
                        </div>
                        <div class="leftbelow">
                            <div class="upcoming" id="upcoming">
                                <div style="display: flex; justify-content: center;">
                                    <img src="/img/bell.svg" alt="">
                                    <h1 style="font-weight: 400;">Upcoming Appointments</h1>
                                </div>
                                <div class="neumorphism">
                                    <div style="display: flex;">
                                        <div class="circle"
                                            style="width: 15px; height: 15px; border-radius: 50%; background-color: #f38f97; margin: 11px;">
                                        </div>
                                        <div class="appointment-details">
                                            <h2 style="font-weight: 500;">Diabetes Test</h2>
                                            <p>Doctor: Dr. Nimansh</p>
                                            <p>4:00pm 28th August 2022</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="neumorphism">
                                    <div style="display: flex;">
                                        <div class="circle"
                                            style="width: 15px; height: 15px; border-radius: 50%; background-color: #f38f97; margin: 11px;">
                                        </div>
                                        <div class="appointment-details">
                                            <h2 style="font-weight: 500;">Blood Test</h2>
                                            <p>Doctor: Dr. Nimansh</p>
                                            <p>4:00pm 2nd September 2022</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="neumorphism">
                                    <div style="display: flex;">
                                        <div class="circle"
                                            style="width: 15px; height: 15px; border-radius: 50%; background-color: #f38f97; margin: 11px;">
                                        </div>
                                        <div class="appointment-details">
                                            <h2 style="font-weight: 500;">Diabetes Test</h2>
                                            <p>Doctor: Dr. Nimansh</p>
                                            <p>4:00pm 14th September 2022</p>
                                        </div>
                                    </div>
                                </div>
                                <hr>
                                <div class="neumorphism" id="details" style="color: #122049;">
                                    <div>
                                        <h1>Patient Details</h1>
                                        <p>Name: <%= fireUser.user.displayName.split("#")[0] %></p>
                                        <p>Email: <%= fireUser.user.email %></p>
                                        <p>Emergency Phone Number: 999999999</p>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="right" style="flex: 1;">
                        <div class="reports-recent" id="reports">
                            <h2 style="text-align: center;">View Recent Reports</h2>
                            <div class="report neumorphism">
                                <div>
                                    <h3>COVID Test</h3>
                                    <p>23.08.22</p>
                                </div>
                            </div>
                            <div class="report neumorphism">
                                <div>
                                    <h3>Blood Test</h3>
                                    <p>23.08.22</p>
                                </div>
                            </div>
                            <div class="report neumorphism">
                                <div>
                                    <h3>COVID Test</h3>
                                    <p>23.08.22</p>
                                </div>
                            </div>
                            <div class="report neumorphism">
                                <div>
                                    <h3>COVID Test</h3>
                                    <p>23.08.22</p>
                                </div>
                            </div>
                            <div class="report neumorphism">
                                <div>
                                    <h3>COVID Test</h3>
                                    <p>23.08.22</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>

        <script>
            var displayName = `<%= fireUser.displayName %>`
            document.getElementById('username').innerText = displayName
        </script>
    </body>