<%- include('partials/head.ejs') %>

    <style>
        .division {
            background-size: cover;
            background-position: center;
            display: flex;
            height: 100vh;
        }

        .form {
            display: flex;
            flex-direction: column;
            align-items: flex-start;
            padding: 2em;
            margin: 0 0 0 auto;
            width: 80%;
        }
        
        .formCenter {
            padding: 1em;
            flex: 1;
            color: #122049;
            backdrop-filter: blur(4px);
            display: flex;
            flex-direction: column;
            align-items: flex-start;
            justify-content: center;
            height: 90vh;
        }

        .reg {
            font-weight: 600;
            font-size: 3em;
            color: #122049;
        }

        .subReg {
            font-weight: 200;
            /* color: #262b3e !important; */
            margin-bottom: 2em;
            font-size: 1.5em;
        }

        .label {
            font-weight: 500;
            margin-bottom: 0.2em;
            font-size: 1.5em;
        }

        input {
            margin-bottom: 1.5em;
            padding: 0.5em 1em;
            border-radius: 10px;
            font-size: 1em;
            border: 3px solid #409BEE;
            width: 80%;
            color: #262b3e;
        }

        button {
            margin-top: 0.5em;
            padding: 0.5em 1em;
            color: whitesmoke;
            background-color: transparent;
            background-color: #122049;
            border-radius: 10px;
            color: #f5f5f5;
            font-size: 1.2em;
            width: 80%;
            cursor: pointer;
        }

        .info {
            flex: 1;
            color: #f7f7ff;
            background: linear-gradient(150deg, #122049 0%, #262b3e 100%);
            display: flex;
            backdrop-filter: blur(4px);
            flex-direction: column;
            align-items: center;
        }

        h1,
        h2 {
            /* color: #f7f7ff; */
            font-size: 3.5em;
            width: 70%;
            text-align: left;
        }

        h2 {
            font-size: 2.5em;
        }

        .list {
            width: 70%;
        }

        .info>h1 {
            margin-top: 8vh;
        }

        ul {
            list-style-type: none;
        }

        .list>ul>li {
            font-size: 1.7em;
            margin-bottom: 1em;
            font-weight: 300;
            border-left: 3px solid #f5f5f5;
            padding: 0 20px;
        }

        select {
            padding: 0.5em 1em;
            border-radius: 10px;
            border: 3px solid #409BEE;
            width: 80%;
        }

        option {
            padding: 0.5em 1em;
        }

        option:hover{
            background-color: black;
        }
    </style>

    <body>
            <div class="division glassmorph">
                <div class="formCenter">
                    <form action="/register" method="post" class="form">
                        <h1 class="reg">Register</h1>
                        <h3 class="subReg">Be a part of the Community</h3>
                        <h2 class="label" id="labelusername">Username<span style="color: #f38f97">*</span></h2>
                        <input type="" placeholder="Enter Username" id="nameReg" name="nameReg" required>
                        <h2 class="label">Email Id<span style="color: #f38f97">*</span></h2>
                        <input type="email" placeholder="Enter Email" name="emailReg" required>
                        <h2 class="label">Password<span style="color: #f38f97">*</span></h2>
                        <input type="password" placeholder="Enter Password" name="passReg" required>
                        <input type="hidden" value="register" id="formtype">
                        <h2 class="label" id="profileType">Profile Type<span style="color: #f38f97">*</span></h2>
                        <select name="roleReg" id="roleReg" style="color: #070600;" required>
                            <option value="d" style="color: #070600;">Doctor</option>
                            <option value="patient" style="color: #070600;" selected>Patient</option>
                        </select>
                        <button type="submit" id="submit">Register</button>
                        <sup id="subtext">Already have an account? <a onclick="toggleform()"
                                style="color: #409bee; cursor: pointer;">Login here</a></sup>
                    </form>
                </div>
                <div class="info">
                    <h1>MeduVeda</h1>
                    <h2 style="font-weight: 500;"> Find And Connect with <span
                            style="color: #f38f97">Thousands</span> of Medical Experts
                    </h2>
                    <div class="list">
                        <ul>
                            <li>Find Doctors based on your Reccomendations</li>
                            <li>Analyze Reports to find your Diagnosis</li>
                            <li>User Friendly Communication for Doctors and Patients</li>
                        </ul>
                    </div>
                </div>
            </div>
            <script defer>
                isReg = true;
                function toggleform() {
                    var heading = document.getElementsByClassName('reg')[0]
                    var subHead = document.getElementsByClassName('subReg')[0]
                    var formtype = document.getElementById('formtype');
                    var submit = document.getElementById('submit');
                    var subtext = document.getElementById('subtext');
                    var usernameInput = document.getElementById('nameReg');
                    var usernameLabel = document.getElementById('labelusername')
                    if (isReg) {
                        heading.innerText = 'Login';
                        subHead.innerText = 'Great to have you back!'
                        formtype.value = 'login'
                        submit.innerText = 'Log in'
                        subtext.innerHTML = 'Don\'t have an account? <a onclick="toggleform()" style="color: #409bee; cursor: pointer;">Register for one</a>';
                        usernameInput.style.display = 'none';
                        usernameLabel.style.display = 'none';
                        document.getElementById('profileType').style.display = 'none';
                        document.getElementById('roleReg').style.display = 'none';
                        isReg = false;
                        document.getElementsByTagName('form')[0].action = '/login'
                    } else {
                        location.reload()
                        return false;
                    }
                }
            </script>
    </body>